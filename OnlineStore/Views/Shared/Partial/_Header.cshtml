    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="logo pull-left">
                        <a asp-controller="Catalog" asp-action="Index"><img src="~/images/home/logo.png" alt="" /></a>
                    </div>
                   
                </div>
