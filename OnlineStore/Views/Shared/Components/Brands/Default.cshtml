@model IEnumerable<BrandViewModel>

    <div class="brands_products">
        <!--brands_products-->
        <h2>Бренды</h2>
        <div class="brands-name">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var brand in Model.Where(b => b.AmoutOfProducts > 0))
                {
                    <li><a asp-controller="Catalog" action="Index" asp-route-BrandID="@brand.Id"> <span class="pull-right">(@brand.AmoutOfProducts)</span>@brand.Name</a></li>
                }
            </ul>
        </div>
    </div><!--/brands_products-->