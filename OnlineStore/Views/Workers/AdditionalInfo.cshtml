@model Worker

<div class="container">
    <h3>Сотрудник</h3>

    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.ID</dd>

        <dt>Фамилия</dt>
        <dd>@Model.Surname</dd>

        <dt>Имя</dt>
        <dd>@Model.Name</dd>

        <dt>Отчество</dt>
        <dd>@Model.Patronymic</dd>

        <dt>Возраст</dt>
        <dd>@Model.Age</dd>
    </dl>

    <hr />
    <a asp-controller="Home" asp-action="Index">На главную</a>
    <br />
    <a asp-controller="Workers" asp-action="Index">Назад</a>

    </div>
   